export async function getAreaBasedList(
  areaCode?: number,
  sigunguCode?: number,
  contentTypeId?: number,
  numOfRows: number = 10,
  pageNo: number = 1
): Promise<TourPlace[]> {
  // ìºì‹œ í‚¤ ìƒì„±
  const cacheKey = `area-${areaCode || 'all'}-${sigunguCode || 'all'}-${contentTypeId || 'all'}-${numOfRows}-${pageNo}`;
  
  // ìºì‹œì—ì„œ ë¨¼ì € í™•ì¸
  const cached = getCachedData(cacheKey);
  if (cached) {
    console.log('âœ… Using cached data for:', cacheKey);
    return cached;
  }

  if (!API_KEY) {
    console.error('VITE_PUBLIC_DATA_API_KEY is not set');
    return [];
  }

  const params = new URLSearchParams({
    serviceKey: API_KEY,
    numOfRows: String(numOfRows),
    pageNo: String(pageNo),
    MobileOS: 'ETC',
    MobileApp: 'Dooribun',
    _type: 'json',
    arrange: 'B', // A: ì œëª©ìˆœ, B: ì¡°íšŒìˆœ(ì¸ê¸°ë„ìˆœ), C: ìˆ˜ì •ì¼ìˆœ, D: ìƒì„±ì¼ìˆœ
  });

  if (areaCode) params.append('areaCode', String(areaCode));
  if (sigunguCode) params.append('sigunguCode', String(sigunguCode));
  if (contentTypeId) params.append('contentTypeId', String(contentTypeId));

  // KorService2ì—ì„œëŠ” ìˆ«ì 2ë¥¼ ë¶™ì¸ areaBasedList2 ì‚¬ìš©
  const url = `${BASE_URL}/areaBasedList2?${params.toString()}`;
  console.log('ğŸŒ Area API Request:', url);

  try {
    const response = await fetch(url);
    console.log('ğŸ“¡ Area Response status:', response.status);
    
    // 429 ì—ëŸ¬ ì²˜ë¦¬ (Rate Limit)
    if (response.status === 429) {
      console.warn('âš ï¸ API Rate limit exceeded (429). ìš”ì²­ íšŸìˆ˜ ì œí•œì— ê±¸ë ¸ìŠµë‹ˆë‹¤.');
      // 429 ì—ëŸ¬ ì‹œ ìºì‹œëœ ë°ì´í„°ê°€ ìˆìœ¼ë©´ ë°˜í™˜
      const cached = getCachedData(cacheKey);
      if (cached) {
        console.log('ğŸ’¾ Returning cached data due to rate limit');
        return cached;
      }
      throw new Error('API_RATE_LIMIT_EXCEEDED');
    }
    
    if (!response.ok) {
      throw new Error(`HTTP error! status: ${response.status}`);
    }

    const data = await response.json();

    // API ì‘ë‹µ êµ¬ì¡° í™•ì¸
    if (!data || !data.response) {
      console.error('âŒ Invalid response structure:', data);
      return [];
    }

    const apiData = data as ApiResponse;
    
    if (apiData.response.header.resultCode !== '0000') {
      console.error('âŒ API Error:', apiData.response.header.resultMsg);
      return [];
    }

    if (!apiData.response.body || !apiData.response.body.items) {
      console.warn('âš ï¸ No items in response body');
      return [];
    }

    const items = apiData.response.body.items?.item || [];
    console.log(`âœ… Area API success: ${items.length} items (total: ${apiData.response.body.totalCount})`);
    
    // ìºì‹œì— ì €ì¥
    setCachedData(cacheKey, items);
    
    return items;
  } catch (error) {
    console.error('âŒ Failed to fetch area-based list:', error);
    
    // ì—ëŸ¬ ë°œìƒ ì‹œ ë¹ˆ ë°°ì—´ ë°˜í™˜ (ê²€ìƒ‰ ê¸°ëŠ¥ ì‚¬ìš© ìœ ë„)
    return [];
  }
}

