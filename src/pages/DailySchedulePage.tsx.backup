import { useState, useEffect } from 'react';
import { useNavigate, useLocation } from 'react-router-dom';
import { ArrowLeft, Check, Clock, MapPin, Calendar, ChevronRight } from 'lucide-react';
import { useItinerary } from '../contexts/useItinerary';
import type { Place, ItineraryItem, DailyItinerary } from '../types';
import { showToast } from '../components/Toast';
import TripProgressStepper from '../components/TripProgressStepper';

interface DaySchedule {
  day: number;
  date: string;
  places: Place[];
}

interface LocationState {
  cityName: string;
  areaCode: number;
  startDate: string;
  endDate: string;
  days: number;
  selectedPlaces: Place[];
}

export default function DailySchedulePage() {
  const navigate = useNavigate();
  const location = useLocation();
  const { setItinerary } = useItinerary();
  const state = location.state as LocationState;

  const [daySchedules, setDaySchedules] = useState<DaySchedule[]>([]);
  const [selectedDay, setSelectedDay] = useState(1);
  const [tripTitle, setTripTitle] = useState('');

  useEffect(() => {
    if (!state || !state.selectedPlaces) {
      navigate('/trip/select-city');
      return;
    }

    // Initialize day schedules
    const schedules: DaySchedule[] = [];
    for (let i = 0; i < state.days; i++) {
      const date = new Date(state.startDate);
      date.setDate(date.getDate() + i);
      schedules.push({
        day: i + 1,
        date: date.toISOString().slice(0, 10),
        places: [],
      });
    }
    setDaySchedules(schedules);
    setTripTitle(`${state.cityName} ${state.days}일 여행`);
  }, [navigate, state]);

  const addPlaceToDay = (place: Place, day: number) => {
    const newSchedules = [...daySchedules];
    const dayIndex = day - 1;
    
    // Check if place already in this day
    if (newSchedules[dayIndex].places.find(p => p.id === place.id)) {
      showToast('이미 이 날짜에 추가된 장소입니다', 'warning');
      return;
    }

    newSchedules[dayIndex].places.push(place);
    setDaySchedules(newSchedules);
  };

  const removePlaceFromDay = (placeId: string, day: number) => {
    const newSchedules = [...daySchedules];
    newSchedules[day - 1].places = newSchedules[day - 1].places.filter(p => p.id !== placeId);
    setDaySchedules(newSchedules);
  };

  const isPlaceAdded = (placeId: string) => {
    return daySchedules.some(schedule => 
      schedule.places.some(p => p.id === placeId)
    );
  };

  const getTravelTime = (fromPlace: Place, toPlace: Place) => {
    // Simple distance calculation (Haversine formula)
    const R = 6371; // Earth radius in km
    const dLat = (toPlace.lat - fromPlace.lat) * Math.PI / 180;
    const dLon = (toPlace.lng - fromPlace.lng) * Math.PI / 180;
    const a = Math.sin(dLat/2) * Math.sin(dLat/2) +
              Math.cos(fromPlace.lat * Math.PI / 180) * Math.cos(toPlace.lat * Math.PI / 180) *
              Math.sin(dLon/2) * Math.sin(dLon/2);
    const c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1-a));
    const distance = R * c;
    
    // Estimate time (assuming 30km/h average speed in city)
    const timeInHours = distance / 30;
    const timeInMins = Math.ceil(timeInHours * 60);
    
    return timeInMins;
  };

  const handleComplete = async () => {
    if (!state) return;

    // Check if at least one day has places
    const hasPlaces = daySchedules.some(schedule => schedule.places.length > 0);
    if (!hasPlaces) {
      showToast('최소 1개 날짜에 장소를 추가해주세요!', 'warning');
      return;
    }

    try {
      // 여러 날짜의 일정을 생성
      const itineraries: DailyItinerary[] = daySchedules
        .filter(schedule => schedule.places.length > 0)
        .map((schedule) => {
          const items: ItineraryItem[] = schedule.places.map((place, index) => ({
            id: `item-${Date.now()}-${schedule.day}-${index}`,
            place,
            stayDurationMins: 60, // 기본 1시간
          }));

          return {
            id: `trip-${Date.now()}-day${schedule.day}`,
            title: `${tripTitle} - Day ${schedule.day}`,
            date: schedule.date,
            items,
            transportMode: 'TRANSIT' as const,
            cityName: state.cityName,
            totalDays: state.days,
            currentDay: schedule.day,
          };
        });

      // 첫 번째 날 일정을 메인으로 설정
      if (itineraries.length > 0) {
        setItinerary(itineraries[0]);
        
        // 모든 일정을 localStorage에 저장 (나중에 Firebase로 마이그레이션)
        const allTrips = JSON.parse(localStorage.getItem('myTrips') || '[]');
        const newTrip = {
          id: `trip-${Date.now()}`,
          title: tripTitle,
          city: state.cityName,
          startDate: state.startDate,
          endDate: state.endDate,
          days: state.days,
          itineraries: itineraries,
          createdAt: new Date().toISOString(),
        };
        allTrips.push(newTrip);
        localStorage.setItem('myTrips', JSON.stringify(allTrips));
      }

      showToast('여행 일정이 생성되었습니다!', 'success');
      
      // Navigate to my plans
      setTimeout(() => {
        navigate('/myplan');
      }, 800);
    } catch (error) {
      console.error('Failed to create itinerary:', error);
      showToast('일정 생성에 실패했습니다', 'error');
    }
  };

  const getUnassignedPlaces = () => {
    return state.selectedPlaces.filter((place: Place) => !isPlaceAdded(place.id));
  };

  if (!state) return null;

  const currentSchedule = daySchedules.find(s => s.day === selectedDay);
  const unassignedPlaces = getUnassignedPlaces();

  const handleBack = () => {
    navigate('/trip/recommendations', { state });
  };

  return (
    <div className="min-h-screen bg-gray-50 pb-24">
      {/* Progress Stepper */}
      <div className="bg-white border-b">
        <div className="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
          <TripProgressStepper currentStep={4} />
        </div>
      </div>

      <div className="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        {/* Back Button - Mobile */}
        <div className="mb-6 md:hidden">
          <button
            onClick={handleBack}
            className="flex items-center text-gray-600 hover:text-gray-900"
          >
            <ArrowLeft className="w-5 h-5 mr-2" />
            이전 단계로
          </button>
        </div>

        {/* Header */}
        <div className="text-center mb-12">
          <h1 className="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
            {state.cityName} 여행 일정을 만들어보세요
          </h1>
          <p className="text-lg text-gray-600 mb-2">
            선택한 장소들을 날짜별로 배치해서 완벽한 여행 계획을 세우세요
          </p>
          <p className="text-sm text-primary-600">
            {new Date(state.startDate).toLocaleDateString('ko-KR')} ~ {new Date(state.endDate).toLocaleDateString('ko-KR')} ({state.days}일)
          </p>
        </div>

        {/* Timeline Style Layout */}
        <div className="space-y-8">
          {daySchedules.map((schedule) => (
            <div key={schedule.day} className="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
              {/* Day Header */}
              <div className="bg-gradient-to-r from-primary-50 to-primary-100 px-6 py-4 border-b border-primary-200">
                <div className="flex items-center justify-between">
                  <div className="flex items-center space-x-3">
                    <div className="w-10 h-10 rounded-full flex items-center justify-center text-white font-bold" style={{ backgroundColor: '#52e3c2' }}>
                      {schedule.day}
                    </div>
                    <div>
                      <h3 className="text-lg font-bold text-gray-900">
                        Day {schedule.day}
                      </h3>
                      <p className="text-sm text-gray-600">
                        {new Date(schedule.date).toLocaleDateString('ko-KR', { 
                          month: 'long', 
                          day: 'numeric', 
                          weekday: 'short' 
                        })}
                      </p>
                    </div>
                  </div>
                  <div className="flex items-center space-x-3">
                    <span className="px-3 py-1 bg-white rounded-full text-sm font-medium text-gray-600">
                      {schedule.places.length}개 장소
                    </span>
                    <button
                      onClick={() => setSelectedDay(schedule.day)}
                      className="px-4 py-2 text-primary-600 hover:bg-white hover:text-primary-700 rounded-lg transition-colors font-medium"
                    >
                      장소 추가
                    </button>
                  </div>
                </div>
              </div>

              {/* Timeline Content */}
              <div className="p-6">
                {schedule.places.length === 0 ? (
                  <div className="text-center py-12">
                    <MapPin className="w-12 h-12 text-gray-300 mx-auto mb-4" />
                    <p className="text-gray-500 mb-4">아직 이 날의 일정이 없어요</p>
                    <button
                      onClick={() => setSelectedDay(schedule.day)}
                      className="px-6 py-2 text-white rounded-lg font-medium transition-colors"
                      style={{ backgroundColor: '#52e3c2' }}
                    >
                      첫 번째 장소 추가하기
                    </button>
                  </div>
                ) : (
                  <div className="space-y-4">
                    {schedule.places.map((place, index) => (
                      <div key={place.id} className="flex items-start space-x-4">
                        {/* Timeline Dot */}
                        <div className="flex flex-col items-center">
                          <div 
                            className="w-8 h-8 rounded-full flex items-center justify-center text-white text-sm font-medium"
                            style={{ backgroundColor: '#52e3c2' }}
                          >
                            {index + 1}
                          </div>
                          {index < schedule.places.length - 1 && (
                            <div className="w-0.5 h-12 bg-gray-200 mt-2"></div>
                          )}
                        </div>

                        {/* Place Card */}
                        <div className="flex-1 bg-gray-50 rounded-xl p-4 hover:bg-gray-100 transition-colors">
                          <div className="flex items-start justify-between">
                            <div className="flex-1">
                              <h4 className="font-semibold text-gray-900 mb-1">
                                {place.name}
                              </h4>
                              <p className="text-sm text-gray-600 mb-2">
                                {place.address}
                              </p>
                              
                              {/* Travel Time */}
                              {index > 0 && (
                                <div className="flex items-center space-x-1 text-xs text-gray-500 mb-2">
                                  <Clock className="w-3 h-3" />
                                  <span>
                                    이전 장소에서 약 {getTravelTime(schedule.places[index - 1], place)}분
                                  </span>
                                </div>
                              )}
                              
                              {/* Tags */}
                              <div className="flex items-center space-x-2">
                                {place.category && (
                                  <span className="px-2 py-1 bg-primary-100 text-primary-600 rounded-full text-xs">
                                    {place.category}
                                  </span>
                                )}
                                <span className="text-xs text-gray-500">
                                  예상 체류: 1시간
                                </span>
                              </div>
                            </div>
                            
                            <button
                              onClick={() => removePlaceFromDay(place.id, schedule.day)}
                              className="p-2 text-gray-400 hover:text-red-500 rounded-lg transition-colors"
                            >
                              <svg className="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                                <path fillRule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clipRule="evenodd" />
                              </svg>
                            </button>
                          </div>
                        </div>
                      </div>
                    ))}
                  </div>
                )}
              </div>
            </div>
          ))}
        </div>

        {/* Floating Add Places Panel */}
        {selectedDay > 0 && unassignedPlaces.length > 0 && (
          <div className="fixed inset-x-4 bottom-24 bg-white rounded-2xl shadow-2xl border border-gray-200 z-40 max-w-md mx-auto">
            <div className="p-4 border-b border-gray-100">
              <div className="flex items-center justify-between">
                <h3 className="font-semibold text-gray-900">
                  Day {selectedDay}에 추가할 장소
                </h3>
                <button
                  onClick={() => setSelectedDay(0)}
                  className="p-1 text-gray-400 hover:text-gray-600 rounded"
                >
                  <svg className="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path fillRule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clipRule="evenodd" />
                  </svg>
                </button>
              </div>
            </div>
            <div className="max-h-60 overflow-y-auto p-4 space-y-2">
              {unassignedPlaces.map((place) => (
                <button
                  key={place.id}
                  onClick={() => {
                    addPlaceToDay(place, selectedDay);
                    if (unassignedPlaces.length === 1) {
                      setSelectedDay(0);
                    }
                  }}
                  className="w-full text-left p-3 rounded-xl border border-gray-200 hover:border-primary-300 hover:bg-primary-50 transition-all group"
                >
                  <div className="font-medium text-gray-900 text-sm mb-1 group-hover:text-primary-700">
                    {place.name}
                  </div>
                  <div className="text-xs text-gray-500 truncate">
                    {place.address}
                  </div>
                </button>
              ))}
            </div>
          </div>
        )}

        {/* Empty State when no places */}
        {unassignedPlaces.length === 0 && daySchedules.every(d => d.places.length === 0) && (
          <div className="text-center py-16">
            <div className="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <MapPin className="w-8 h-8 text-gray-400" />
            </div>
            <h3 className="text-lg font-semibold text-gray-900 mb-2">장소를 추가해보세요</h3>
            <p className="text-gray-600 mb-6">선택한 장소들을 각 날짜에 배치해서 완벽한 여행 계획을 만들어보세요</p>
            <button
              onClick={() => navigate('/trip/recommendations', { state })}
              className="px-6 py-3 text-primary-600 border border-primary-300 rounded-xl hover:bg-primary-50 transition-colors"
            >
              더 많은 장소 선택하기
            </button>
          </div>
        )}
                  <div className="text-center py-16">
                    <MapPin className="w-12 h-12 text-gray-300 mx-auto mb-3" />
                    <p className="text-gray-500">
                      왼쪽에서 장소를 선택하여 일정을 추가하세요
                    </p>
                  </div>
                )}
              </div>
            </div>
          ))}
        </div>

        {/* Navigation Buttons */}
        <div className="fixed bottom-0 left-0 right-0 bg-white border-t p-4 shadow-lg z-50">
          <div className="max-w-6xl mx-auto">
            <div className="flex gap-3">
              {/* Back Button */}
              <button
                onClick={handleBack}
                className="flex items-center justify-center px-6 py-4 border-2 border-gray-300 text-gray-700 font-semibold rounded-xl hover:bg-gray-50 transition-colors"
              >
                <ArrowLeft className="w-5 h-5 mr-2" />
                <span className="hidden md:inline">이전</span>
              </button>
              
              {/* Complete Button */}
              <button
                onClick={handleComplete}
                className="flex-1 flex items-center justify-center py-4 px-6 text-white font-semibold text-lg rounded-xl transition-all shadow-lg hover:shadow-xl"
                style={{ backgroundColor: '#52e3c2' }}
              >
                <Check className="w-5 h-5 mr-2" />
                <span>{tripTitle} 일정 완성하기</span>
                <ChevronRight className="w-5 h-5 ml-2" />
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  );
}
